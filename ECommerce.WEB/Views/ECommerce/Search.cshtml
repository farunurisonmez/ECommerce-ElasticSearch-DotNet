@using ECommerce.WEB.ViewModels

@{
    ViewData["Title"] = "Search";
}

@model SearchPageViewModel
<div class="container mt-5">
    <div class="d-flex gap-5">
        <div class="col-md-3">
            <h4 class="mb-4">Search Filters</h4>
            <form asp-action="Search" method="Get">
                <div class="mb-3">
                    <label asp-for="SearchViewModel.CustomerFullName" class="form-label">Customer Full Name</label>
                    <input asp-for="SearchViewModel.CustomerFullName" class="form-control" placeholder="Enter full name">
                </div>
                <div class="mb-3">
                    <label asp-for="SearchViewModel.Category" class="form-label"></label>
                    <input asp-for="SearchViewModel.Category" class="form-control" placeholder="Enter category">
                </div>
                <div class="mb-3">
                    <label asp-for="SearchViewModel.Gender" class="form-label"></label>
                    <input asp-for="SearchViewModel.Gender" class="form-control" placeholder="Enter gender">
                </div>
                <div class="mb-3">
                    <label asp-for="SearchViewModel.OrderDateStart" class="form-label"></label>
                    <input asp-for="SearchViewModel.OrderDateStart" class="form-control" type="date">
                </div>
                <div class="mb-3">
                    <label asp-for="SearchViewModel.OrderDateEnd" class="form-label">Order Date (End)</label>
                    <input asp-for="SearchViewModel.OrderDateEnd" class="form-control" type="date">
                </div>
                <div class="mb-3">
                    <button class="btn btn-primary w-100" type="submit">Search</button>
                </div>
            </form>
        </div>
        <div class="col-md-9">
            <div class="alert alert-success">
                <span>A total of @Model.TotalCount records found</span>
            </div>
            <div class="table-responsive">
                <table class="table table-striped table-hover">
                    <thead class="table-light">
                        <tr>
                            <th>Category</th>
                            <th>Customer Full Name</th>
                            <th>Order Date</th>
                            <th>Gender</th>
                            <th>Taxful Total Price</th>
                            <th>OrderId</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.List)
                        {
                            <tr>
                                <td>@item.Category</td>
                                <td>@item.CustomerFullName</td>
                                <td>@item.OrderDate</td> <!-- Format the date -->
                                <td>@item.Gender</td>
                                <td>@item.TaxfulTotalPrice.ToString("C")</td> <!-- Format the price -->
                                <td>@item.OrderId</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>


            <nav>
                <ul class="pagination">

                    <li class="page-item">
                        <a class="page-link" href="@Model.CreatePageUrl(Context.Request,1,Model.PageSize)">First</a>
                    </li>


                    @for (int i = Model.StartPage(); i <= @Model.EndPage(); i++)
                    {
                        <li class="page-item @(Model.Page==i ?"active" :"")">
                            <a class="page-link" href="@Model.CreatePageUrl(Context.Request,i,Model.PageSize)">@i</a>
                        </li>
                    }

                    <li class="page-item">
                        <a class="page-link" href="@Model.CreatePageUrl(Context.Request,Model.PageLinkCount,Model.PageSize)">Last</a>
                    </li>
                </ul>
            </nav>
        </div>
    </div>
</div>
